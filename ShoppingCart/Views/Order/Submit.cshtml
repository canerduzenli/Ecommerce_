@model IEnumerable<ShoppingCart.Models.Order>

@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order Details</h2>

<div class="order-summary">
    <p><strong>Delivery Country:</strong> @ViewBag.DeliveryCountry</p>
    <p><strong>Conversion Rate:</strong> @ViewBag.ConversionRate</p>
    <p><strong>Tax Rate:</strong> @ViewBag.TaxRate%</p> <!-- Added % to make it clear it's a percentage -->
    <p><strong>Total Price:</strong> @ViewData["TotalPrice"] CAD</p>
    <p><strong>Converted Price:</strong> @ViewBag.ConvertedPrice  @ViewBag.DeliveryCountry Currency</p>
    <p><strong>Total (with taxes):</strong> @ViewBag.TotalPriceWithTaxes  @ViewBag.DeliveryCountry Currency </p>
</div>

<form method="post" asp-controller="Order" asp-action="Create" class="order-form">
    <input type="hidden" name="deliveryCountry" value="@ViewBag.DeliveryCountry" />
    <input type="hidden" name="totalPriceWithTaxes" value="@ViewBag.TotalPriceWithTaxes" />

    <div class="form-group">
        <label for="Address"><strong>Address:</strong></label>
        <input name="Address" id="Address" placeholder="Enter your address" required />
    </div>

    <div class="form-group">
        <label for="MailingCode"><strong>Mailing Code:</strong></label>
        <input name="MailingCode" id="MailingCode" placeholder="Enter your mailing code" required />
    </div>

    <div class="form-submit">
        <button type="submit">Submit Order</button>
    </div>
</form>

<style>
    .order-summary p {
        margin-bottom: 10px;
    }

    .order-form .form-group {
        margin-bottom: 15px;
    }

    .order-form input {
        width: 100%;
        padding: 5px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .order-form button {
        padding: 7px 15px;
        background-color: #007BFF;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .order-form button:hover {
            background-color: #0056b3;
        }
</style>
